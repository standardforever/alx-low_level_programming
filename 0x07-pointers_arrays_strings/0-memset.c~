#include "main.h"

/**
 * _memset - it fills memory with a constant byte
 * @s: Starting address of memory to be filled
 * @b: Value to be filled
 * @n: Number of bytes to be filled starting from ptr to be filled
 * Description: The  memset()  function  fills  the  first  n  bytes of the
               memory area pointed to by s with the constant byte c.
 * Return: The memset() function returns a pointer to the memory area s
 */
char *_memset(char *s, char b, unsigned int n)
{
	unsigned int i;

	for (i = 0; i < n; i++)
	{
		s[i] = b;
	}
	return (s);
}
