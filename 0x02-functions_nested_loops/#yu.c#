#include "main.h"

void long_value(int val)
{
       	if (val / 10)
       		long_value( val /10);
       	_putchar(val % 10 + '0');
}

void short_value(int val)
{
	_putchar(val + '0');
	_putchar(',');
	_putchar(' ');
	_putchar(' ');
}

void counts(int con)
{
	int count;
	int j;
	for (count = 0; count <= 9; count++)
	{
		j = con;
		j *= count;
		if (j <= 9)
			short_value(j);
		else
		{
			long_value(j);
			_putchar(',');
			_putchar(' ');
		}
	}
	_putchar('\n');
}
