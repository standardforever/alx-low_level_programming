//#include "main.h"
#include <stdio.h>

/**
 * print_number - it print numbers using putchar
 * @n: the number to be printed
 * Return: nothing
 */
void print_number(int n)
{
	int i, j, k;

	for (i = 0; i >= 0; i++)
	{
		if (n / 10)
			k = (k * 10) + (n % 10);
		n = n / 10;
		if (n < 0)
			break;
	}
	for (j = 0; j >= 0; j++)
	{
		if (k / 10)
			putchar(k % 10);
		k = k / 10;
		if (k < 0)
			break;
	}
	putchar(n % 10 + '0');
}

int main(void)
{
	print_number(980);
}
